<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root_lyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".home.HomeActivity">


    <RelativeLayout
        android:id="@+id/home_unity_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/home_unity_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/home_unity_loading_lyt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:visibility="visible">

            <com.ubtedu.ukit.common.view.FixedLottieAnimationView
                android:id="@+id/loading_dialog_lottie_view"
                android:layout_width="@dimen/ubt_dimen_470px"
                android:layout_height="@dimen/ubt_dimen_444px"
                android:layout_centerInParent="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/refresh" />
        </RelativeLayout>
    </RelativeLayout>


    <com.ubtedu.ukit.project.host.CustomScrollViewPager
        android:id="@+id/home_main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:visibility="visible" />


    <RelativeLayout
        android:id="@+id/home_tab_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_setting_btn"
            android:layout_width="@dimen/ubt_dimen_150px"
            android:layout_height="@dimen/ubt_dimen_150px"
            android:padding="@dimen/ubt_dimen_50px"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/ubt_dimen_34px"
            android:layout_marginEnd="@dimen/ubt_dimen_34px"
            android:src="@drawable/ic_ukit_close" />

        <LinearLayout
            android:id="@+id/home_tab_container_lyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ubt_dimen_30px"
            android:orientation="horizontal">

            <com.ubtedu.ukit.home.widget.MainTabItemView
                android:id="@+id/home_tutorial_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ubt_dimen_94px"
                app:tabAnimRaw="@raw/course"
                app:tabItemCheck="true"
                app:tabItemText="@string/home_tab_tutorial" />

            <com.ubtedu.ukit.home.widget.MainTabItemView
                android:id="@+id/home_project_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ubt_dimen_94px"
                app:tabAnimRaw="@raw/project"
                app:tabItemCheck="false"
                app:tabItemText="@string/home_tab_project" />

            <com.ubtedu.ukit.home.widget.MainTabItemView
                android:id="@+id/home_ai_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tabAnimRaw="@raw/ai"
                app:tabItemCheck="false"
                app:tabItemText="@string/home_tab_ai" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/home_project_container_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/home_launch_mask_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.ubtedu.ukit.common.view.FixedLottieAnimationView
            android:layout_width="@dimen/ubt_dimen_470px"
            android:layout_height="@dimen/ubt_dimen_444px"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/refresh" />
    </RelativeLayout>

</RelativeLayout>