<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_fragment_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000">

    <RelativeLayout
        android:id="@+id/dialog_batch_wifi_config_content_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/ubt_dimen_240px"
        android:layout_marginTop="@dimen/ubt_dimen_84px"
        android:layout_marginEnd="@dimen/ubt_dimen_240px"
        android:layout_marginBottom="@dimen/ubt_dimen_84px"
        android:background="@drawable/shape_dialog_normal_bg">

        <TextView
            android:id="@+id/dialog_batch_wifi_config_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ubt_dimen_60px"
            android:text="@string/batch_config_wifi_progress_title"
            android:textColor="#171E2B"
            android:textSize="@dimen/ubt_font_52px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_batch_wifi_config_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_batch_wifi_config_title_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ubt_dimen_31px"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/batch_config_wifi_progress_msg"
            android:textColor="#555B67"
            android:textSize="@dimen/ubt_font_40px" />

        <com.ubtedu.ukit.bluetooth.dialog.widget.DialogProgressView
            android:id="@+id/dialog_batch_wifi_config_progress_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_batch_wifi_config_msg_tv"
            android:layout_marginTop="@dimen/ubt_dimen_38px" />

        <com.ubtedu.ukit.common.view.FixedLottieAnimationView
            android:id="@+id/dialog_batch_wifi_config_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_batch_wifi_config_progress_view"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/batch_wifi_config_animation" />

    </RelativeLayout>
</RelativeLayout>



