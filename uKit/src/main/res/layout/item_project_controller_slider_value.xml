<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#000">
    <TextView
        android:id="@+id/item_project_controller_slider_value"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/ubt_dimen_12px"
        android:layout_marginTop="@dimen/ubt_dimen_8px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ubt_font_28px"
        android:textColor="#CCFFFFFF"
        android:textColorHint="#CCFFFFFF"
        android:singleLine="true"
        android:hint="0"
        tools:text="1000" />
    <TextView
        android:id="@+id/item_project_controller_slider_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/ubt_dimen_12px"
        android:layout_marginTop="@dimen/ubt_dimen_8px"
        android:layout_marginEnd="@dimen/ubt_dimen_12px"
        android:layout_toStartOf="@+id/item_project_controller_slider_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ubt_font_28px"
        android:textColor="#CCFFFFFF"
        android:textColorHint="#CCFFFFFF"
        android:singleLine="true"
        android:ellipsize="end"
        android:hint="@string/project_controller_widget_slider"
        tools:text="ABCDEABCDEABCDEABCDEABCDEABCDEABCDE"/>
    <com.ubtedu.ukit.project.controller.widget.ControllerSeekBar
        android:id="@+id/item_project_controller_slider_slider"
        android:layout_below="@id/item_project_controller_slider_name"
        android:layout_marginTop="@dimen/ubt_dimen_8px"
        android:layout_marginBottom="@dimen/ubt_dimen_8px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:progressDrawable="@drawable/layer_controller_widget_slider_seekbar_bg"
        android:thumb="@drawable/project_remote_sidebar_bar_a_slider"
        android:splitTrack="false"
        android:max="2000"
        android:progress="1000" />
</RelativeLayout>
