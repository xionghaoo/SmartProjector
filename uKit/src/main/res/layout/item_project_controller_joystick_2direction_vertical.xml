<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.ubtedu.ukit.project.controller.widget.VerticalRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <TextView
            android:id="@+id/item_project_controller_joystick_name"
            android:layout_marginStart="@dimen/ubt_dimen_12px"
            android:layout_marginEnd="@dimen/ubt_dimen_12px"
            android:layout_marginTop="@dimen/ubt_dimen_8px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ubt_font_28px"
            android:textColor="#CCFFFFFF"
            android:textColorHint="#CCFFFFFF"
            android:singleLine="true"
            android:ellipsize="end"
            android:hint="@string/project_controller_widget_twoway_joystick" />
        <com.ubtedu.ukit.project.controller.widget.ControllerSeekBar
            android:id="@+id/item_project_controller_joystick_slider"
            android:layout_below="@id/item_project_controller_joystick_name"
            android:layout_marginTop="@dimen/ubt_dimen_8px"
            android:layout_marginBottom="@dimen/ubt_dimen_8px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progressDrawable="@drawable/layer_controller_widget_joystick_seekbar_bg"
            android:thumb="@drawable/project_remote_sidebar_rocker_b_slider"
            android:splitTrack="false"
            android:max="100"
            android:progress="50" />
    </com.ubtedu.ukit.project.controller.widget.VerticalRelativeLayout>
</FrameLayout>
