<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_project_controller_button_layout"
    android:padding="@dimen/ubt_dimen_12px" >
    <com.ubtedu.ukit.project.controller.widget.ButtonBackgroundViewV2
        android:id="@+id/item_project_controller_button_bg"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.ubtedu.ukit.project.controller.widget.SquareViewLayout
        android:id="@+id/item_project_controller_button_sv"
        android:layout_marginTop="@dimen/ubt_dimen_18px"
        android:layout_marginBottom="@dimen/ubt_dimen_18px"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ImageView
            android:id="@+id/item_project_controller_button_icon"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/act_icon_0" />
    </com.ubtedu.ukit.project.controller.widget.SquareViewLayout>
    <TextView
        android:id="@+id/item_project_controller_button_name"
        android:layout_toEndOf="@id/item_project_controller_button_sv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/ubt_font_28px"
        android:layout_marginEnd="@dimen/ubt_dimen_9px"
        android:textColor="#555B67"
        android:textColorHint="#555B67"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:ellipsize="end"
        android:hint="@string/project_controller_widget_custom_button_name" />
    <com.ubtedu.ukit.project.controller.widget.ButtonCountdownViewV2
        android:id="@+id/item_project_controller_button_countdown"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/ubt_font_52px"
        android:textColor="#FFFFFF" />
</RelativeLayout>
