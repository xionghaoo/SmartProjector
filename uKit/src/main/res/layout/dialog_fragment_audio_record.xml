<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_fragment_root_lyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/dialog_fragment_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="#99000000">
        <RelativeLayout
            android:layout_width="@dimen/ubt_dimen_1440px"
            android:layout_height="@dimen/ubt_dimen_910px"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:background="@drawable/shape_dialog_normal_bg">
            <TextView
                android:id="@+id/audio_record_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/ubt_dimen_58px"
                android:textColor="#171E2B"
                android:textSize="@dimen/ubt_font_52px"
                android:textStyle="bold"
                android:text="@string/audio_record_title"/>



            <LinearLayout
                android:id="@+id/audio_record_button_lyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/ubt_dimen_30px"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/audio_record_negative_btn"
                    android:layout_width="@dimen/ubt_dimen_414px"
                    android:layout_height="@dimen/ubt_dimen_150px"
                    android:layout_marginEnd="@dimen/ubt_dimen_6px"
                    android:background="@drawable/selector_prompt_negative_btn"
                    android:text="@string/audio_record_negative"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/ubt_font_48px"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/audio_record_positive_btn"
                    android:layout_width="@dimen/ubt_dimen_414px"
                    android:layout_height="@dimen/ubt_dimen_150px"
                    android:background="@drawable/selector_prompt_positive_btn"
                    android:text="@string/audio_record_positive"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/ubt_font_48px"
                    android:textStyle="bold" />
            </LinearLayout>
            <com.ubtedu.ukit.common.view.FixedLottieAnimationView
                android:id="@+id/audio_record_lottie_view"
                android:layout_width="@dimen/ubt_dimen_600px"
                android:layout_height="@dimen/ubt_dimen_420px"
                android:layout_marginTop="@dimen/ubt_dimen_18px"
                android:layout_centerInParent="true"
                android:layout_below="@id/audio_record_title_tv"
                android:background="@color/colorTransparent"
                app:lottie_rawRes="@raw/record"
                app:lottie_imageAssetsFolder="images/"
                app:lottie_loop="true"
                app:lottie_autoPlay="false"/>
            <LinearLayout
                android:id="@+id/audio_record_time_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/audio_record_lottie_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/ubt_dimen_0px"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/audio_record_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textColor="#60D064"
                    android:textSize="@dimen/ubt_font_58px"
                    android:text="00:00"/>
                <TextView
                    android:textColor="#929AA8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/ubt_font_58px"
                    android:text="@string/audio_record_duration_max"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/audio_processing_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@id/audio_record_time_area"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/ubt_dimen_0px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textColor="#929AA8"
                    android:textSize="@dimen/ubt_font_58px"
                    android:text="@string/audio_processing_msg"/>
                <ImageView
                    android:id="@+id/audio_processing_icon"
                    android:layout_width="@dimen/ubt_dimen_57px"
                    android:layout_height="@dimen/ubt_dimen_57px"
                    android:src="@drawable/popup_list_refresh_icon"
                    android:layout_marginLeft="@dimen/ubt_dimen_14px" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>