<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modify_edu_password_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEFF2"
    android:orientation="vertical">

    <com.ubtedu.alpha1x.ui.widgets.PressButton
        android:id="@+id/modify_edu_password_back_btn"
        android:layout_width="@dimen/ubt_dimen_126px"
        android:layout_height="@dimen/ubt_dimen_126px"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/ubt_dimen_16px"
        android:background="@drawable/nav_back_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ubt_dimen_348px"
        android:layout_marginTop="@dimen/ubt_dimen_136px"
        android:text="@string/account_modify_password"
        android:textColor="#171E2B"
        android:textSize="@dimen/ubt_font_70px"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="@dimen/ubt_dimen_1128px"
        android:layout_height="@dimen/ubt_dimen_282px"
        android:layout_marginStart="@dimen/ubt_dimen_348px"
        android:layout_marginTop="@dimen/ubt_dimen_120px"
        android:background="@drawable/login_input2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/ubt_dimen_80px"
                android:layout_height="@dimen/ubt_dimen_80px"
                android:layout_marginStart="@dimen/ubt_dimen_28px"
                android:background="@drawable/phone_password_icon" />

            <EditText
                android:id="@+id/modify_edu_password_edt_old"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/drawable_null"
                android:gravity="start|center_vertical"
                android:hint="@string/account_edu_modify_password_hint_old"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingStart="@dimen/ubt_dimen_40px"
                android:paddingEnd="@dimen/ubt_dimen_120px"
                android:selectAllOnFocus="true"
                android:text=""
                android:textColor="#171E2B"
                android:textColorHint="#929AA8"
                android:textSize="@dimen/ubt_font_46px" />

            <CheckBox
                android:id="@+id/modify_edu_password_eye_view_old"
                android:layout_width="@dimen/ubt_dimen_140px"
                android:layout_height="@dimen/ubt_dimen_140px"
                android:layout_marginEnd="@dimen/ubt_dimen_40px"
                android:background="@drawable/selector_account_password_eye"
                android:button="@null"
                android:visibility="gone"
                android:checked="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/ubt_dimen_80px"
                android:layout_height="@dimen/ubt_dimen_80px"
                android:layout_marginStart="@dimen/ubt_dimen_28px"
                android:background="@drawable/phone_password_icon" />

            <EditText
                android:id="@+id/modify_edu_password_edt_new"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/drawable_null"
                android:gravity="start|center_vertical"
                android:hint="@string/account_edu_modify_password_hint_new"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:paddingStart="@dimen/ubt_dimen_40px"
                android:paddingEnd="@dimen/ubt_dimen_120px"
                android:selectAllOnFocus="true"
                android:text=""
                android:textColor="#171E2B"
                android:textColorHint="#929AA8"
                android:textSize="@dimen/ubt_font_46px" />

            <CheckBox
                android:id="@+id/modify_edu_password_eye_view_new"
                android:layout_width="@dimen/ubt_dimen_140px"
                android:layout_height="@dimen/ubt_dimen_140px"
                android:layout_marginEnd="@dimen/ubt_dimen_40px"
                android:background="@drawable/selector_account_password_eye"
                android:button="@null"
                android:visibility="gone"
                android:checked="false" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/modify_edu_password_submit_btn"
        android:layout_width="@dimen/ubt_dimen_540px"
        android:layout_height="@dimen/ubt_dimen_150px"
        android:layout_marginStart="@dimen/ubt_dimen_348px"
        android:layout_marginTop="@dimen/ubt_dimen_80px"
        android:textAllCaps="false"
        android:textSize="@dimen/ubt_font_46px"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/selector_bluetooth_search_btn"
        android:text="@string/account_edu_modify_password_btn_txt"
        />
</LinearLayout>