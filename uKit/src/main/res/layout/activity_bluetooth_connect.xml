<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluetooth_bg">

    <RelativeLayout
        android:id="@+id/bluetooth_connect_title_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ubt_dimen_126px">

        <ImageView
            android:id="@+id/bluetooth_connect_exit_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/title_btn_horizontal_margin"
            android:layout_marginTop="@dimen/title_btn_vertical_margin"
            android:layout_marginBottom="@dimen/title_btn_vertical_margin"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_tab_back" />
    </RelativeLayout>

    <TextView
        android:id="@+id/bluetooth_connect_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ubt_dimen_28px"
        android:text="@string/bluetooth_search_title"
        android:textColor="#171E2B"
        android:textSize="@dimen/ubt_font_52px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bluetooth_connect_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bluetooth_connect_title_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ubt_dimen_12px"
        android:text="@string/bluetooth_connect_success_check_hint"
        android:textColor="#555B67"
        android:textSize="@dimen/ubt_font_28px"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/bluetooth_connect_board_item_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bluetooth_connect_msg_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ubt_dimen_10px"
        android:orientation="horizontal">

        <com.ubtedu.ukit.bluetooth.connect.widget.PeripheralView
            android:id="@+id/bluetooth_connect_board_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:paddingTop="@dimen/ubt_dimen_66px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/bluetooth_connect_board_item"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/bluetooth_connect_name_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/bluetooth_connect_icon_iv"
                    android:layout_width="@dimen/ubt_dimen_69px"
                    android:layout_height="@dimen/ubt_dimen_69px"
                    android:src="@drawable/network_ic_bluetooth" />

                <TextView
                    android:id="@+id/bluetooth_connect_board_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ubt_dimen_16px"
                    android:textColor="#555B67"
                    android:textSize="@dimen/ubt_dimen_35px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bluetooth_connect_wifi_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ubt_dimen_16px"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/bluetooth_wifi_icon_iv"
                    android:layout_width="@dimen/ubt_dimen_69px"
                    android:layout_height="@dimen/ubt_dimen_69px"
                    tools:src="@drawable/network_ic_wifi1" />

                <TextView
                    android:id="@+id/bluetooth_connect_wifi_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ubt_dimen_16px"
                    android:textColor="#555B67"
                    android:textSize="@dimen/ubt_dimen_35px" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bluetooth_connect_btn_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ubt_dimen_150px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/ubt_dimen_37px"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/bluetooth_connect_recheck_btn"
            android:layout_width="@dimen/ubt_dimen_542px"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/ubt_dimen_23px"
            android:background="@drawable/selector_bluetooth_search_recheck_btn"
            android:text="@string/bluetooth_connect_recheck_btn"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/ubt_font_46px"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bluetooth_wifi_config_btn"
            android:layout_width="@dimen/ubt_dimen_542px"
            android:layout_height="match_parent"
            android:background="@drawable/selector_bluetooth_search_recheck_btn"
            android:text="@string/bluetooth_wifi_config_btn"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/ubt_font_46px"
            android:textStyle="bold" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/ubt_dimen_23px">

            <Button
                android:id="@+id/bluetooth_connect_confirm_btn"
                android:layout_width="@dimen/ubt_dimen_542px"
                android:layout_height="match_parent"
                android:background="@drawable/selector_bluetooth_search_btn"
                android:text="@string/bluetooth_connect_confirm_btn"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/ubt_font_46px"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bluetooth_connect_disconnect_btn"
                android:layout_width="@dimen/ubt_dimen_542px"
                android:layout_height="match_parent"
                android:background="@drawable/selector_bluetooth_search_cancel_btn"
                android:text="@string/bluetooth_connect_disconnect_btn"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/ubt_font_46px"
                android:visibility="visible" />
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bluetooth_connect_item_list_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bluetooth_new_version_need_wifi_config_message_area"
        android:layout_below="@+id/bluetooth_connect_board_item_area"
        android:layout_marginStart="@dimen/ubt_dimen_232px"
        android:layout_marginEnd="@dimen/ubt_dimen_232px">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bluetooth_connect_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:minHeight="@dimen/ubt_dimen_320px" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bluetooth_new_version_need_wifi_config_message_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_above="@+id/bluetooth_connect_btn_area"
        android:gravity="center_horizontal">

        <TextView
            android:layout_marginBottom="@dimen/ubt_dimen_23px"
            android:id="@+id/bluetooth_new_version_need_wifi_config_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/bluetooth_new_version_need_wifi_config_message"
            android:textColor="#FE6F7B"
            android:textSize="@dimen/ubt_dimen_34px" />
    </LinearLayout>
</RelativeLayout>
