<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ubtedu.alpha1x.ui.widgets.PressButton
        android:id="@+id/user_avatar_back_btn"
        android:layout_width="@dimen/ubt_dimen_126px"
        android:layout_height="@dimen/ubt_dimen_126px"
        android:layout_marginStart="@dimen/ubt_dimen_16px"
        android:background="@drawable/nav_back_icon" />

    <com.ubtedu.alpha1x.ui.widgets.PressButton
        android:id="@+id/user_avatar_save_btn"
        android:layout_width="@dimen/ubt_dimen_126px"
        android:layout_height="@dimen/ubt_dimen_126px"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/ubt_dimen_16px"
        android:enabled="false"
        android:background="@drawable/selector_user_avatar_save_btn" />
    <ProgressBar
        android:id="@+id/user_avatar_download_progressBar"
        android:layout_width="@dimen/ubt_dimen_126px"
        android:layout_height="@dimen/ubt_dimen_126px"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/ubt_dimen_16px"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/user_avatar_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        tools:src="@drawable/default_image" />

</RelativeLayout>