<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ubt_dimen_334px"
    android:layout_height="@dimen/ubt_dimen_126px"
    android:gravity="center_vertical" >
    <ImageView
        android:id="@+id/item_project_controller_toolbar_iv"
        android:layout_marginStart="@dimen/ubt_dimen_28px"
        android:layout_marginEnd="@dimen/ubt_dimen_28px"
        android:layout_width="@dimen/ubt_dimen_80px"
        android:layout_height="@dimen/ubt_dimen_80px"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />
    <TextView
        android:id="@+id/item_project_controller_toolbar_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/ubt_font_40px"/>
</LinearLayout>
