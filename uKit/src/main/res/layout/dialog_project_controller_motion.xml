<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_fragment_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000">
    <RelativeLayout
        android:layout_width="@dimen/ubt_dimen_1440px"
        android:layout_height="@dimen/ubt_dimen_910px"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:background="@drawable/shape_dialog_normal_bg">
        <TextView
            android:id="@+id/controller_project_motion_list_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ubt_dimen_58px"
            android:textColor="#171E2B"
            android:textSize="@dimen/ubt_font_52px"
            android:textStyle="bold"
            android:text="@string/project_controller_setting_motion_title" />

        <Button
            android:id="@+id/controller_project_motion_list_close_btn"
            android:layout_width="@dimen/ubt_dimen_410px"
            android:layout_height="@dimen/ubt_dimen_150px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/ubt_dimen_48px"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/ubt_font_46px"
            android:text="@string/project_sub_list_close"
            android:background="@drawable/selector_project_sub_list_close_btn"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/controller_project_motion_list_rcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ubt_dimen_50px"
            android:layout_marginBottom="@dimen/ubt_dimen_23px"
            android:layout_marginStart="@dimen/ubt_dimen_90px"
            android:layout_marginEnd="@dimen/ubt_dimen_90px"
            android:layout_below="@id/controller_project_motion_list_title_tv"
            android:layout_above="@id/controller_project_motion_list_close_btn"/>

    </RelativeLayout>
</RelativeLayout>