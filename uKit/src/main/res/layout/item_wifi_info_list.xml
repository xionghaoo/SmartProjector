<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ubt_dimen_144px"
    android:background="@drawable/bluetooth_list_btn_white_nor"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/ubt_dimen_63px"
    android:paddingEnd="@dimen/ubt_dimen_63px">

    <TextView
        android:id="@+id/item_wifi_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#555B67"
        android:textSize="@dimen/ubt_font_46px" />

    <ImageView
        android:id="@+id/item_wifi_connect_iv"
        android:layout_width="@dimen/ubt_dimen_69px"
        android:layout_height="@dimen/ubt_dimen_69px"
        android:layout_marginEnd="@dimen/ubt_dimen_28px"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/network_ic_connect" />

    <ImageView
        android:id="@+id/item_wifi_lock_iv"
        android:layout_width="@dimen/ubt_dimen_69px"
        android:layout_height="@dimen/ubt_dimen_69px"
        android:layout_marginEnd="@dimen/ubt_dimen_28px"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/wifi_list_lock_icon_b" />

    <ImageView
        android:id="@+id/item_wifi_signal_iv"
        android:layout_width="@dimen/ubt_dimen_69px"
        android:layout_height="@dimen/ubt_dimen_69px"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/level_wifi_search_signal_icon" />

</LinearLayout>