<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_nickname_root_lyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEFF2"
    tools:context=".user.gdpr.GdprAgeActivity">
    <com.ubtedu.alpha1x.ui.widgets.PressButton
        android:id="@+id/register_nickname_back_btn"
        android:layout_width="@dimen/ubt_dimen_126px"
        android:layout_height="@dimen/ubt_dimen_126px"
        android:layout_marginStart="@dimen/ubt_dimen_16px"
        android:layout_gravity="start"
        android:background="@drawable/nav_back_icon_nor" />

    <LinearLayout
        android:id="@+id/register_nickname_ask_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/register_nickname_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ubt_dimen_218px"
            android:layout_marginStart="@dimen/ubt_dimen_346px"
            android:textStyle="bold"
            android:text="@string/account_register_nickname_question"
            android:textColor="#171E2B"
            android:textSize="@dimen/ubt_font_70px" />


        <TextView
            android:id="@+id/register_nickname_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ubt_dimen_22px"
            android:layout_marginStart="@dimen/ubt_dimen_346px"
            android:text="@string/account_register_nickname_desc"
            android:textColor="#555B67"
            android:textSize="@dimen/ubt_font_34px" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ubt_dimen_138px"
            android:layout_marginStart="@dimen/ubt_dimen_346px"
            android:layout_marginEnd="@dimen/ubt_dimen_458px"
            android:layout_marginTop="@dimen/ubt_dimen_106px"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@drawable/registered_name_bg">
                <View
                    android:layout_width="@dimen/ubt_dimen_80px"
                    android:layout_height="@dimen/ubt_dimen_80px"
                    android:layout_marginStart="@dimen/ubt_dimen_26px"
                    android:layout_marginEnd="@dimen/ubt_dimen_28px"
                    android:background="@drawable/login_input_figure_icon"/>
                <EditText

                    android:id="@+id/register_nickname_edt"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    android:hint="@string/account_register_nickname_hint"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="text"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/ubt_dimen_120px"
                    android:text=""
                    android:textColor="#171E2B"
                    android:textColorHint="#929AA8"
                    android:textSize="@dimen/ubt_font_46px"
                    android:background="@drawable/drawable_null"/>
                <Button
                    android:id="@+id/register_nickname_input_clear_btn"
                    android:layout_width="@dimen/ubt_dimen_140px"
                    android:layout_height="@dimen/ubt_dimen_140px"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_marginEnd="@dimen/ubt_dimen_10px"
                    android:background="@drawable/login_input_delete_btn"/>

            </LinearLayout>
            <Button
                android:id="@+id/register_nickname_submit_btn"
                android:layout_width="@dimen/ubt_dimen_138px"
                android:layout_height="@dimen/ubt_dimen_138px"
                android:background="@drawable/selector_register_nickname_submit_btn"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>