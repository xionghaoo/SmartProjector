<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/main_card_padding_top"
    tools:context=".ui.elementary.ElementayMainFragment">

    <FrameLayout
        android:id="@+id/textView23"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_8dp"
        android:background="@mipmap/ic_live_courses"
        app:layout_constraintBottom_toBottomOf="@+id/textView19"
        app:layout_constraintEnd_toEndOf="@+id/tv_program_teaching_video"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toTopOf="@+id/textView19">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/_8dp"
            android:text="同步直播课"
            android:textColor="@color/white"
            android:textSize="@dimen/_26sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView30"
        android:layout_width="@dimen/_20dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_connect_line_bottom"
        app:layout_constraintBottom_toBottomOf="@+id/textView20"
        app:layout_constraintEnd_toEndOf="@+id/textView23"
        app:layout_constraintStart_toStartOf="@+id/textView23"
        app:layout_constraintTop_toTopOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="@dimen/_36dp"
        android:layout_height="@dimen/_20dp"
        android:layout_marginStart="@dimen/_254dp"
        android:background="@drawable/shape_connect_line_right"
        app:layout_constraintBottom_toBottomOf="@+id/textView19"
        app:layout_constraintStart_toStartOf="@+id/textView19"
        app:layout_constraintTop_toTopOf="@+id/textView19" />

    <FrameLayout
        android:id="@+id/textView19"
        android:layout_width="@dimen/_314dp"
        android:layout_height="@dimen/_250dp"
        android:layout_marginTop="@dimen/_15dp"
        android:background="@mipmap/ic_live_quality_development"
        app:layout_constraintStart_toStartOf="@+id/tv_program_teaching_video"
        app:layout_constraintTop_toBottomOf="@+id/tv_program_teaching_video">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/_17dp"
            android:text="素质课拓展"
            android:textColor="@color/white"
            android:textSize="@dimen/_26sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_36dp"
        android:layout_marginBottom="@dimen/_246dp"
        android:background="@drawable/shape_connect_line_bottom"
        app:layout_constraintBottom_toBottomOf="@+id/textView19"
        app:layout_constraintEnd_toEndOf="@+id/textView19"
        app:layout_constraintStart_toStartOf="@+id/textView19" />

    <FrameLayout
        android:id="@+id/tv_program_teaching_video"
        android:layout_width="@dimen/_636dp"
        android:layout_height="@dimen/_249dp"
        android:layout_marginStart="@dimen/_75dp"
        android:layout_marginTop="@dimen/_29dp"
        android:background="@mipmap/ic_live_classroom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/_31dp"
            android:layout_marginBottom="@dimen/_21dp"
            android:text="名师直播课"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_26sp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/textView41"
        android:layout_width="@dimen/_468dp"
        android:layout_height="@dimen/_548dp"
        android:layout_marginStart="@dimen/_51dp"
        android:background="@mipmap/ic_live_records_container"
        android:orientation="vertical"
        android:paddingStart="@dimen/_21dp"
        android:paddingEnd="@dimen/_37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_program_teaching_video"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140dp"
            android:layout_marginTop="@dimen/_34dp"
            android:background="@drawable/shape_round_rect_white_alpha2"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_76dp"
                android:layout_height="@dimen/_76dp"
                android:src="@mipmap/ic_live_play"
                android:layout_marginEnd="@dimen/_57dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_22dp"
                android:text="四年级作文专题"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_36sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04月01 ~ 05月23日"
                android:layout_marginBottom="@dimen/_12dp"
                android:textSize="@dimen/_20sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView13" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>