<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainFragment">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="@dimen/_486dp"
        android:layout_height="@dimen/_444dp"
        android:layout_marginStart="@dimen/_100dp"
        android:layout_marginTop="@dimen/_158dp"
        android:background="@drawable/shape_card_red"
        android:gravity="top|start"
        android:paddingStart="@dimen/_45dp"
        android:paddingTop="@dimen/_119dp"
        android:text="有声绘本"
        android:textColor="@color/white"
        android:textSize="@dimen/_46sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="@dimen/_242dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_22dp"
        android:layout_marginBottom="@dimen/_55dp"
        android:background="@drawable/shape_card_blue"
        android:text="口算"
        android:paddingTop="@dimen/_38dp"
        android:paddingStart="@dimen/_45dp"
        android:textSize="@dimen/_46sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="诗词"
        android:paddingTop="@dimen/_38dp"
        android:paddingStart="@dimen/_45dp"
        android:textSize="@dimen/_46sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/shape_card_green"
        android:layout_marginStart="@dimen/_22dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <FrameLayout
        android:id="@+id/textView11"
        android:layout_width="@dimen/_550dp"
        android:layout_height="@dimen/_556dp"
        android:layout_marginTop="@dimen/_110dp"
        android:layout_marginStart="@dimen/_46dp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_48dp"
            android:text="编程课程"
            style="@style/CardTitleStyle"
            android:paddingTop="@dimen/_108dp"
            android:paddingStart="@dimen/_49dp"
            android:background="@drawable/shape_card_purple"/>
        <ImageView
            android:layout_width="@dimen/_292dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ip_logo"
            android:layout_marginEnd="@dimen/_4dp"
            android:layout_gravity="end"/>
    </FrameLayout>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_22dp"
        android:text="我要创作"
        android:paddingTop="@dimen/_60dp"
        android:paddingStart="@dimen/_49dp"
        style="@style/CardTitleStyle"
        android:textColor="@color/white"
        android:background="@drawable/shape_card_orange"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <LinearLayout
        android:id="@+id/textView14"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_50dp"
        android:layout_marginEnd="@dimen/_46dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_card_transparent"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/textView7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CardTitleStyle"
            android:text="专项学习"
            android:layout_marginTop="@dimen/_27dp"/>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>