<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.DemoImageActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/demo_iv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/img_knowledge_math_test"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_100dp"
            android:layout_height="@dimen/_100dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginStart="@dimen/_20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/demo_btn_math_paper_center"
            android:layout_width="@dimen/_240dp"
            android:layout_height="@dimen/_340dp"
            android:layout_marginTop="@dimen/_100dp"
            android:layout_marginEnd="@dimen/_300dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/demo_btn_math_wrong_book"
            android:layout_width="@dimen/_480dp"
            android:layout_height="@dimen/_270dp"
            android:layout_marginEnd="@dimen/_50dp"
            android:layout_marginTop="@dimen/_20dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/demo_btn_math_paper_center" />

        <TextView
            android:id="@+id/demo_btn_math_test"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_15dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/demo_btn_math_paper_center"
            app:layout_constraintEnd_toEndOf="@+id/demo_btn_math_wrong_book"
            app:layout_constraintStart_toEndOf="@+id/demo_btn_math_paper_center"
            app:layout_constraintTop_toTopOf="@+id/demo_btn_math_paper_center" />

        <TextView
            android:id="@+id/demo_btn_math_teach_sync"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_40dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/demo_btn_math_wrong_book"
            app:layout_constraintEnd_toStartOf="@+id/demo_btn_math_paper_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_back" />

        <TextView
            android:id="@+id/demo_btn_teach_sync_points"
            android:layout_width="@dimen/_120dp"
            android:layout_height="@dimen/_120dp"
            android:layout_marginTop="@dimen/_460dp"
            android:layout_marginStart="@dimen/_180dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/demo_btn_teach_sync_points_1"
            android:layout_width="@dimen/_120dp"
            android:layout_height="@dimen/_120dp"
            android:layout_marginStart="@dimen/_125dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/demo_btn_teach_sync_points"
            app:layout_constraintStart_toEndOf="@+id/demo_btn_teach_sync_points" />

        <TextView
            android:id="@+id/demo_btn_teach_sync_points_2"
            android:layout_width="@dimen/_120dp"
            android:layout_height="@dimen/_120dp"
            android:layout_marginStart="@dimen/_160dp"
            android:layout_marginTop="@dimen/_90dp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/demo_btn_teach_sync_points_1"
            app:layout_constraintTop_toTopOf="@+id/demo_btn_teach_sync_points_1" />

        <TextView
            android:id="@+id/demo_btn_teach_sync_points_3"
            android:layout_width="@dimen/_120dp"
            android:layout_height="@dimen/_120dp"
            android:layout_marginStart="@dimen/_120dp"
            android:layout_marginBottom="@dimen/_90dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/demo_btn_teach_sync_points_2"
            app:layout_constraintStart_toEndOf="@+id/demo_btn_teach_sync_points_2" />

        <TextView
            android:id="@+id/demo_btn_test_unit_1"
            android:layout_width="@dimen/_220dp"
            android:layout_height="@dimen/_220dp"
            android:layout_marginTop="@dimen/_230dp"
            android:layout_marginStart="@dimen/_50dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>