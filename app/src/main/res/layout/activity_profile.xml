<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileActivity">

    <ImageView
        android:id="@+id/iv_profile_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ubtrobot.smartprojector.widgets.LauncherToolbar
        android:id="@+id/toolbar"
        android:layout_width="@dimen/_600dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textSize="@dimen/_30sp"
        android:textColor="@color/color_menu_item_highlight"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/_22dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_call_with_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30dp"
        android:layout_marginTop="@dimen/_30dp"
        android:text="和家长通话"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name" />

    <TextView
        android:id="@+id/tv_test_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_100dp"
        android:layout_marginEnd="@dimen/_100dp"
        android:padding="@dimen/_20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/_24sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_profile_bg"
        app:layout_constraintEnd_toEndOf="@+id/iv_profile_bg"
        app:layout_constraintStart_toEndOf="@+id/btn_call_with_parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:text="屏幕信息" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50dp"
        android:layout_marginStart="@dimen/_30dp"
        android:textSize="@dimen/_24sp"
        android:textColor="@color/black"
        tools:text="台灯111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/btn_voice_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:text="叮当测试"
        app:layout_constraintStart_toStartOf="@+id/btn_call_with_parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_call_with_parent" />

    <Button
        android:id="@+id/btn_elementary_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小学系统"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/btn_voice_test"
        app:layout_constraintTop_toBottomOf="@+id/btn_voice_test" />

    <Button
        android:id="@+id/btn_infant_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="幼儿系统"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/btn_elementary_system"
        app:layout_constraintTop_toBottomOf="@+id/btn_elementary_system" />

</androidx.constraintlayout.widget.ConstraintLayout>