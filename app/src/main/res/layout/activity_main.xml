<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_page"
    tools:context=".ui.MainActivity">

    <ImageView
        android:id="@+id/iv_main_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="@dimen/_44dp"
        android:gravity="center_vertical|end"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextClock
            android:id="@+id/tv_system_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="EEEE"
            android:format24Hour="EEEE"
            android:layout_marginEnd="@dimen/_24dp"
            android:textColor="@color/color_status_bar_txt"
            android:textSize="@dimen/_16sp"
            tools:text="星期天" />

        <TextClock
            android:id="@+id/tv_system_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="yyyy年MM月dd日"
            android:format24Hour="yyyy年MM月dd日"
            android:layout_marginEnd="@dimen/_62dp"
            android:textColor="@color/color_status_bar_txt"
            android:textSize="@dimen/_16sp"
            tools:text="2020年1月1日" />

        <TextClock
            android:id="@+id/tv_system_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_46dp"
            tools:text="16:42"
            android:textSize="@dimen/_16sp"
            android:format24Hour="HH:mm"
            android:format12Hour="hh:mm"
            android:textColor="@color/color_status_bar_txt"/>

        <ImageView
            android:id="@+id/iv_wifi_status"
            android:layout_width="@dimen/_21dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_42dp"
            app:srcCompat="@drawable/ic_wifi_on" />
    </LinearLayout>

    <com.ubtrobot.smartprojector.launcher.ItemOptionView
        android:id="@+id/item_option_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/pager_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.viewpager.widget.ViewPager>
    </com.ubtrobot.smartprojector.launcher.ItemOptionView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_main_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="@dimen/_258dp"
            android:layout_height="@dimen/_86dp"
            android:layout_marginStart="@dimen/_8dp"
            android:background="@mipmap/ic_assistant_avatar_bg"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/container_avatar"
            app:layout_constraintStart_toStartOf="@+id/container_avatar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_114dp"
                android:layout_marginTop="@dimen/_13dp"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:text="Eva"
                android:textColor="@color/white"
                android:textSize="@dimen/_26sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_115dp"
                android:layout_marginTop="@dimen/_4dp"
                android:layout_marginBottom="@dimen/_6dp"
                android:includeFontPadding="false"
                android:text="等级2"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_76dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_46sp"
            android:layout_marginTop="@dimen/_14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="同步语文" />

        <TextView
            android:id="@+id/textView58"
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_8dp"
            android:layout_marginStart="@dimen/_155dp"
            android:background="@drawable/shape_connect_line_left"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
            app:layout_constraintStart_toEndOf="@+id/container_avatar"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

        <ImageView
            android:id="@+id/container_avatar"
            android:layout_width="@dimen/_107dp"
            android:layout_height="@dimen/_107dp"
            android:layout_marginStart="@dimen/_75dp"
            android:layout_marginTop="@dimen/_3dp"
            android:src="@mipmap/ic_assistant_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/_75dp"
            android:layout_height="@dimen/_75dp"
            android:layout_marginStart="@dimen/_11dp"
            android:src="@mipmap/ic_header_my_study"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

