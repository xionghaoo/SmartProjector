<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <ImageView
        android:id="@+id/iv_main_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextClock
        android:id="@+id/tv_system_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:format12Hour="EEEE"
        android:format24Hour="EEEE"
        android:layout_marginEnd="@dimen/_24dp"
        android:textColor="@color/color_status_bar_txt"
        android:textSize="@dimen/_24sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_system_date"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="星期天" />

    <TextClock
        android:id="@+id/tv_system_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="yyyy年MM月dd日"
        android:format24Hour="yyyy年MM月dd日"
        android:layout_marginEnd="@dimen/_62dp"
        android:textColor="@color/color_status_bar_txt"
        android:textSize="@dimen/_24sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_system_week"
        app:layout_constraintEnd_toStartOf="@+id/iv_wifi_status"
        app:layout_constraintTop_toTopOf="@+id/tv_system_week"
        tools:text="2020年1月1日" />

    <TextClock
        android:id="@+id/tv_system_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_46dp"
        tools:text="16:42"
        android:textSize="@dimen/_24sp"
        android:format24Hour="HH:mm"
        android:format12Hour="hh:mm"
        android:textColor="@color/color_status_bar_txt"
        app:layout_constraintBottom_toBottomOf="@+id/tv_system_week"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_system_week" />

    <ImageView
        android:id="@+id/iv_wifi_status"
        android:layout_width="@dimen/_34dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_42dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_system_time"
        app:layout_constraintEnd_toStartOf="@+id/tv_system_time"
        app:layout_constraintTop_toTopOf="@+id/tv_system_time"
        app:srcCompat="@drawable/ic_wifi_on" />

    <com.ubtrobot.smartprojector.launcher.ItemOptionView
        android:id="@+id/item_option_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/pager_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.viewpager.widget.ViewPager>
    </com.ubtrobot.smartprojector.launcher.ItemOptionView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_main_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_86dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/menu_level"
            android:layout_width="@dimen/_310dp"
            android:layout_height="@dimen/_120dp"
            android:layout_marginStart="@dimen/_87dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_60dp"
                android:background="@drawable/shape_bg_avatar_gradient" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_150dp"
                android:layout_marginTop="@dimen/_12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eva"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_36sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:text="等级2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_28sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/container_avatar"
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_120dp"
                android:src="@mipmap/ic_assistant_avatar">
            </ImageView>
        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/textView30"
            android:layout_width="@dimen/_362dp"
            android:layout_height="@dimen/_114dp"
            android:layout_marginStart="@dimen/_267dp"
            android:background="@drawable/shape_bg_clock_card"
            app:layout_constraintBottom_toBottomOf="@+id/menu_level"
            app:layout_constraintStart_toStartOf="@+id/menu_level"
            app:layout_constraintTop_toTopOf="@+id/menu_level">

            <ImageView
                android:id="@+id/textView40"
                android:layout_width="@dimen/_42dp"
                android:layout_height="@dimen/_42dp"
                android:layout_marginStart="@dimen/_28dp"
                android:src="@mipmap/ic_clock"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_19dp"
                android:text="写作业1小时；预习"
                android:textColor="@color/white"
                android:textSize="@dimen/_28sp"
                app:layout_constraintStart_toEndOf="@+id/textView40"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7dp"
                android:text="完成计划有奖励哦"
                android:textColor="@color/color_text_dark_55"
                android:textSize="@dimen/_22sp"
                app:layout_constraintStart_toStartOf="@+id/textView41"
                app:layout_constraintTop_toBottomOf="@+id/textView41" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_87dp"
            android:text="同步语文"
            android:textColor="@color/white"
            android:textSize="@dimen/_66sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/menu_level" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.ubtrobot.smartprojector.widgets.PagerIndicator
        android:id="@+id/pager_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_51dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_6dp"
        android:paddingEnd="@dimen/_6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

