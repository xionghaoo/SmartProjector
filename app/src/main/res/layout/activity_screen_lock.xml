<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lock_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".ui.restrict.ScreenLockActivity">

    <EditText
        android:id="@+id/edt_lock_password"
        android:layout_width="@dimen/_260dp"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        android:inputType="number"
        android:maxLength="4"
        android:hint="@string/hint_screen_lock"
        tools:ignore="TextFields" />
    <com.ubtrobot.smartprojector.keyboard.layouts.NumberKeyboardView
        android:id="@+id/number_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:nkv_width="@dimen/_400dp"
        app:nkv_type="screen_lock"/>

</LinearLayout>