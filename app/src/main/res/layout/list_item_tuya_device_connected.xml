<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_marginBottom="@dimen/_10dp"
    android:layout_marginStart="@dimen/_15dp"
    android:layout_marginEnd="@dimen/_15dp"
    android:background="@drawable/shape_card_normal">

    <ImageView
        android:id="@+id/iv_tuya_device_icon"
        android:layout_width="@dimen/_100dp"
        android:layout_height="@dimen/_100dp"
        android:padding="@dimen/_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tuya_device_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_15dp"
        android:paddingEnd="@dimen/_15dp"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_tuya_device_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Wifi氛围灯" />

    <TextView
        android:id="@+id/tv_tuya_device_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="@dimen/_15dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:textSize="@dimen/_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="在线" />

    <TextView
        android:id="@+id/v_tuya_device_status_indicator"
        android:layout_width="@dimen/_10dp"
        android:layout_height="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_5dp"
        android:background="@drawable/shape_indicator_offline"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tuya_device_status"
        app:layout_constraintEnd_toStartOf="@id/tv_tuya_device_status"
        app:layout_constraintTop_toTopOf="@+id/tv_tuya_device_status" />

</androidx.constraintlayout.widget.ConstraintLayout>